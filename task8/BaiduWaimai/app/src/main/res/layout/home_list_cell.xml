<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp">

        <FrameLayout
            android:id="@+id/fl_Shangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/ivShangjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/shopone" />

            <ImageView
                android:id="@+id/ivBaiduPeisong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baidu_peisong" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/fl_Shangjia"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/fl_Shangjia"
            android:layout_toRightOf="@+id/fl_Shangjia"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvShangjiaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="9"
                    android:text="正宗重庆麻辣烫（测试）"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tvQuan"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@+id/tvPiao"
                        android:background="@drawable/textview_shape"
                        android:gravity="center"
                        android:text="券"
                        android:textColor="@color/dodgerblue" />

                    <!--<View-->
                    <!--android:layout_width="5dp"-->
                    <!--android:layout_height="20dp" />-->

                    <TextView
                        android:id="@+id/tvPiao"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@+id/tvFu"
                        android:background="@drawable/textview_shape"
                        android:gravity="center"
                        android:text="票"
                        android:textColor="@color/dodgerblue" />

                    <!--<View-->
                    <!--android:layout_width="5dp"-->
                    <!--android:layout_height="20dp" />-->

                    <TextView
                        android:id="@+id/tvFu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@+id/tvPei"
                        android:background="@drawable/textview_shape"
                        android:gravity="center"
                        android:text="付"
                        android:textColor="@color/dodgerblue" />

                    <!--<View-->
                    <!--android:layout_width="5dp"-->
                    <!--android:layout_height="20dp" />-->

                    <TextView
                        android:id="@+id/tvPei"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/textview_shape"
                        android:gravity="center"
                        android:text="赔"
                        android:textColor="@color/dodgerblue" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="@color/red"
                    android:rating="3.6"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/tvAllSold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/ratingBar"
                    android:layout_toRightOf="@+id/ratingBar"
                    android:text="  已售666份" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="990m" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQisongCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起送￥20" />

                <TextView
                    android:id="@+id/tvPeisongCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|配送￥20" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|平均45分钟" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_shangjia_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/dash_line" />

        <LinearLayout
            android:id="@+id/ll_mian_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/waimai_shoplist_item_icon_mian" />

            <TextView
                android:id="@+id/tvMianMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="免费配送"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_quan_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/waimai_shoplist_item_icon_juan" />

            <TextView
                android:id="@+id/tvQuanMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="本店新用户可领取新用户券5元"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jian_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/waimai_shoplist_item_icon_jian" />

            <TextView
                android:id="@+id/tvJianMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="在线支付满15减1元"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>