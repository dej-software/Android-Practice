<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jikexueyuan.movebutton.MainActivity">


    <Button
        android:id="@+id/btnXMLAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move this by ViewAnimation(XML)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCodeAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move this by ViewAnimation(Java code)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnXMLAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move this by ObjectAnimator(XML)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCodeAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move this by ObjectAnimator(Java code)"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/ivMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img" />
</LinearLayout>
