<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jikexueyuan.startactivitywithpermission">

    <permission android:name="com.jikexueyuan.startactivitywithpermission.permission.ExampleApplication" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="ExampleApplication"
            android:permission="com.jikexueyuan.startactivitywithpermission.permission.ExampleApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.jikexueyuan.startactivitywithpermission.intent.action.ExampleApplication" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>